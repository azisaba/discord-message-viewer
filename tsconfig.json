{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2021",
    "outDir": "dist/"
  },
  "include": [
    "src/",
    "types/"
  ],
  "exclude": [
    "node_modules/"
  ]
}
